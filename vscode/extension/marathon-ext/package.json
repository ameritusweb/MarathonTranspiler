{
  "name": "marathon-ext",
  "displayName": "marathon-ext",
  "description": "A runtime-first software development framework",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension",
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "contributes": {
    "semanticTokenScopes": [
    {
      "language": "mrt",
      "scopes": {
        "keyword": [
          "keyword.control.annotation.mrt",
          "keyword.control.js"
        ],
        "function": [
          "entity.name.function.js"
        ],
        "class": [
          "entity.name.class"
        ],
        "variable": [
          "variable.other.object.js",
          "variable.other.readwrite"
        ],
        "comment": [
          "comment.line.double-slash.mrt",
          "comment.block.mrt"
        ],
        "string": [
          "string.quoted.double.mrt"
        ],
        "number": [
          "constant.numeric.js"
        ]
      }
    }
  ],
    "semanticTokenTypes": [
      {
        "id": "keyword", 
        "description": "Language keywords"
      },
      {
        "id": "type", 
        "superType": "keyword",
        "description": "Language types"
      },
      {
        "id": "property", 
        "superType": "type",
        "description": "Language properties"
      },
      {
        "id": "function",
        "superType": "keyword",
        "description": "Function and method declarations"
      },
      {
        "id": "variable",
        "superType": "type",
        "description": "Variables and fields"
      },
      {
        "id": "string",
        "superType": "type",
        "description": "String literals"
      },
      {
        "id": "comment",
        "description": "Comments"
      },
      {
        "id": "class",
        "superType": "type",
        "description": "Class, interface and enum declarations"
      },
      {
        "id": "number",
        "superType": "type",
        "description": "Numeric literals"
      },
      {
        "id": "parameter",
        "superType": "variable",
        "description": "Function parameters"
      }
  ],
  "semanticTokenModifiers": [
    {
      "id": "declaration",
      "description": "Declarations"
    },
    {
      "id": "definition",
      "description": "Definitions"
    },
    {
      "id": "readonly",
      "description": "Read-only elements"
    }
  ],
    "languages": [
      {
        "id": "mrt",
        "aliases": [
          "MRT Language",
          "Marathon Language"
        ],
        "extensions": [
          ".mrt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mrt",
        "scopeName": "source.mrt",
        "path": "./syntaxes/mrt.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/vscode": "^1.97.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "vscode": "^1.1.37",
    "vscode-languageclient": "^9.0.1"
  }
}
